# Environment Configuration for Quiz Application
# Copy this file to .env and update the values as needed

# CRITICAL: Secret Key for Flask Sessions
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
# This MUST be set for production to maintain user sessions across server restarts
SECRET_KEY=your-secret-key-here-replace-with-random-64-char-hex-string

# Flask Debug Mode
# Set to True for development, False for production
FLASK_DEBUG=False

# Session Security Settings
# Set to True when using HTTPS in production
SESSION_COOKIE_SECURE=False

# Session lifetime in hours
SESSION_LIFETIME_HOURS=2

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable/disable file logging
LOG_TO_FILE=True

# Path to log file (relative to project root)
LOG_FILE_PATH=logs/app.log

# Log format (Python logging format string)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log date format
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Rate Limiting Storage
# Use "memory://" for development, Redis URL for production
# Example Redis: redis://localhost:6379
RATELIMIT_STORAGE_URI=memory://

# Quiz Time Limit Settings (in minutes)
MAX_TIME_LIMIT_MINUTES=120
MIN_TIME_LIMIT_MINUTES=1
DEFAULT_TIME_LIMIT_MINUTES=10
